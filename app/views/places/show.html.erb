<%if @current_user%>
<h1><%= @place.name %></h1>

<h2>My Posts</h2>
<div class="row">
<% for post in @place.posts.where({user_id: @current_user.id})%>
<div class-"col-md-3 col-sm-6">
  <h3><%= post.title %></h3>
  <h4><%= post.posted_on %></h4>
  <p><%= post.description %></p>
  <% if post.uploaded_image.attached?%>
  <img src="<%= url_for(post.uploaded_image)%>" class="img-fluid">

  <%else%>

  <img src="<%= post.uploaded_image%>"class="img-fluid"

<%end%>
  
</div>
<% end %>
</div> 

<p>
  <a href="/posts/new?place_id=<%= @place.id %>" class="btn btn-primary">New Post</a>
</p>

<p>
  <a href="/places" class="btn btn-secondary">Back To All Places</button> </a>
</p>

<%else%>

Login to create a new post!

<%end%>